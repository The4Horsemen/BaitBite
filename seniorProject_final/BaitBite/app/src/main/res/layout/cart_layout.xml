<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app1:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="9">

            <TextView
                android:id="@+id/textView_cart_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical|start"
                android:text="Dish 01"
                android:textAllCaps="false"
                app:layout_constraintStart_toEndOf="@+id/textView_DishName"
                app:layout_constraintTop_toTopOf="@+id/textView_DishName" />

            <TextView
                android:id="@+id/textView_cart_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_vertical|start"
                android:text="10000"
                android:textAllCaps="true"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/textView_cart_item_name"
                app:layout_constraintTop_toBottomOf="@+id/textView_cart_item_name"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/textView_DishName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="Dish Name:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_Price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price:"
                app:layout_constraintStart_toStartOf="@+id/textView_DishName"
                app:layout_constraintTop_toBottomOf="@+id/textView_DishName" />

        </android.support.constraint.ConstraintLayout>

        <ImageView
            android:id="@+id/imageView_cart_item_count"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="16dp" />

    </LinearLayout>

</android.support.v7.widget.CardView>