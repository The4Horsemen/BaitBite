<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app1:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/ConstraintLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9">

            <TextView
                android:id="@+id/textView_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical|start"
                android:text="#01"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/textView_order_phone"
                app:layout_constraintStart_toEndOf="@+id/textView_Orderlabel"
                app:layout_constraintTop_toTopOf="@+id/textView_Orderlabel"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/textView_order_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"
                android:text="Status"
                android:textAllCaps="true"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/textView_order_id"
                app:layout_constraintTop_toBottomOf="@+id/textView_order_id" />

            <TextView
                android:id="@+id/textView_order_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"
                android:text="1234567890"
                android:textAllCaps="true"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/textView_order_id"
                app:layout_constraintTop_toBottomOf="@+id/textView_order_status" />

            <TextView
                android:id="@+id/textView_order_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|start"
                android:text="Address"
                android:textAllCaps="true"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/textView_order_id"
                app:layout_constraintTop_toBottomOf="@+id/textView_order_phone" />

            <TextView
                android:id="@+id/textView_Orderlabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:text="Order Number:"
                app1:layout_constraintStart_toStartOf="parent"
                app1:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_Statuslabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                app1:layout_constraintStart_toStartOf="@+id/textView_Orderlabel"
                app:layout_constraintTop_toBottomOf="@+id/textView_Orderlabel" />

            <TextView
                android:id="@+id/textView_Phonelabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone Number:"
                app:layout_constraintStart_toStartOf="@+id/textView_Statuslabel"
                app:layout_constraintTop_toBottomOf="@+id/textView_Statuslabel" />

            <TextView
                android:id="@+id/textView_Adresslabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address:"
                app:layout_constraintStart_toStartOf="@+id/textView_Phonelabel"
                app:layout_constraintTop_toBottomOf="@+id/textView_Phonelabel" />

        </android.support.constraint.ConstraintLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>